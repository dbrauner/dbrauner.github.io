<core:View
	controllerName="sap.ui.demo.myFiori.view.Detail"
	xmlns="sap.m"
	xmlns:core="sap.ui.core" >
	<Page
		title="{i18n>DetailTitle}"
		showNavButton="jQuery.device.is.phone" 
		navButtonPress="handleNavButtonPress" >
		<ObjectHeader title="{SoId}" number="{GrossAmount}" numberUnit="{CurrencyCode}">
		    <attributes>
		        <ObjectAttribute text="{BuyerName}"> </ObjectAttribute>
		        <ObjectAttribute text="{CreatedByBp}"> </ObjectAttribute>
		        <ObjectAttribute
		            text="{
		                path: 'CreatedAt',
		                formatter: 'sap.ui.demo.myFiori.util.Formatter.date'
		                }" />
		                
		    </attributes>
		    <firstStatus>
		        <ObjectStatus text="{LifecycleStatus}"></ObjectStatus>
		        
		    </firstStatus>
		</ObjectHeader>

	</Page>
</core:View>